<Window x:Class="Readifine.UserTest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Readifine"
      mc:Ignorable="d" 
      d:DesignHeight="285.338" d:DesignWidth="463.534"
      Title="UserTest">

    <Grid>
        <Label x:Name="label" Content="Please select the meaning from the options below" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <Label x:Name="word" Content="" Margin="10,41,10,0" VerticalAlignment="Top"/>
        <StackPanel x:Name="options" Margin="10,72,10,10" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="no" Content="No" Margin="0,45,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="33" Click="no_Click"/>
        <Button x:Name="yes" Content="Yes" Margin="0,46,48,0" VerticalAlignment="Top" Click="yes_Click" HorizontalAlignment="Right" Width="33"/>

    </Grid>
</Window>
