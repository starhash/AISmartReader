<Page x:Class="Readifine.BookViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Readifine"
      mc:Ignorable="d" 
      d:DesignHeight="277.444" d:DesignWidth="523.308"
      Title="BookViewer">

    <Grid>
        <RichTextBox x:Name="doc" Margin="10,35" IsReadOnly="True" />
        <Button x:Name="load" Content="Load" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="load_Click"/>
        <Label x:Name="status" Content="Status" Margin="90,7,10,0" VerticalAlignment="Top" Height="23"/>
        <Button x:Name="prev" Content="Previous" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Height="20" VerticalAlignment="Bottom" Click="prev_Click"/>
        <Button x:Name="next" Content="Next" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom" Click="next_Click"/>
        <Label x:Name="page" Content="Page ? / ?" Margin="90,0,90,10" Height="23" VerticalAlignment="Bottom" HorizontalContentAlignment="Center"/>

    </Grid>
</Page>
